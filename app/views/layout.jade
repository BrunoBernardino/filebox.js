
//- # layout

doctype
html.no-js
    head
        title filebox.js
        block meta
            meta( charset='utf-8' )
            meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
            meta( name='description', content='' )
            meta( name='viewport', content='width=device-width, initial-scale=1' )
        block stylesheets
            <!-- build:css css/app.css -->
            link( rel='stylesheet', href='css/bootstrap.css' )
            link( rel='stylesheet', href='css/style.css' )
            <!-- endbuild -->
        <!-- build:js js/modernizr.js -->
        script( src='bower/modernizr/modernizr.js' )
        <!-- endbuild -->
    body
        <!-- Fixed navbar -->
        .navbar.navbar-default.navbar-fixed-top( role="navigation" )
            .container
                .navbar-header
                    a.navbar-brand( href='#' ) filebox.js
                .navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        li: a( href='#' ) Search
                        // TODO ^ make it an input
                        li
                            span.upload-icon
                                span.glyphicon.glyphicon-cloud-upload 
                                input.fileupload( type='file', name='file' )

        block messages
            include _messages.jade
        block content
        block scripts
            <!-- build:js js/app.js -->
            script( src='bower/jquery/dist/jquery.js' )
            script( src='bower/jquery-ui/jquery-ui.min.js' )
            script( src='bower/bootstrap/dist/js/bootstrap.js' )
            script( src='bower/bootbox/bootbox.js' )
            script( src='bower/riotjs/riot.min.js' )
            script( src='js/jquery.fileupload.js' )
            script( src='js/plugins.js' )
            script( src='js/imageAPI.js' )
            script( src='js/imageModel.js' )
            script( src='js/imagePresenter.js' )
            script( src='js/main.js' )
            <!-- endbuild -->
